{
    "manifest_version": 2,
    "name": "Enformation Redirect",
    "version": "0.1.0",
    "description": "Quickly reload pages through Enformation.",

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_ui": {"page": "options.html"},

    "permissions": ["contextMenus", "storage", "activeTab"],
    "icons": {
        "16": "icons/icon2-16.png",
        "32": "icons/icon2-32.png",
        "48": "icons/icon2-48.png",
        "128": "icons/icon2-128.png"
    },

    "browser_action": {
  	"browser_style": true,
        "default_icon": {
        "32": "icons/icon2-32.png"
        },
    "theme_icons": [{
        "light": "icons/icon2-light-32.png",
        "dark": "icons/icon2-32.png",
        "size": 32
    }],
        "default_title": "Reload through Enformation"
  },

  "applications": {
    "gecko": {
        "id": "enformationredirect@extensions.ro",
        "strict_min_version": "57.0"
    }
  }
}
