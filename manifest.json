{
    "manifest_version": 3,
    "name": "Enformation Redirect",
    "version": "0.3.0",
    "homepage_url": "https://github.com/alexfikl/e-nformation-redirect",
    "description": "Quickly reload pages through Enformation",

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": ["contextMenus", "storage", "tabs", "webRequest"],
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },

    "action": {
        "default_icon": {
            "32": "icons/icon-32.png"
        },
        "theme_icons": [
            {
                "light": "icons/icon-light-32.png",
                "dark": "icons/icon-32.png",
                "size": 32
            }
        ],
        "default_title": "Reload through Enformation"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "enformationredirect@extensions.ro",
            "strict_min_version": "110.0"
        }
    }
}
